{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@components": [
        "components/index.tsx"
      ],
      "@layouts": [
        "layouts/index.tsx"
      ],
      "@utilities": [
        "utilities/index.tsx"
      ],
      "@services": [
        "services/index.ts"
      ],
      "@types": [
        "types/index.ts"
      ],
      "@i18n": [
        "i18n.tsx"
      ],
      "@animations": [
        "_animations.ts"
      ],
      "@data/*": [
        "data/*"
      ],
      "@icons/*": [
        "icons/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
